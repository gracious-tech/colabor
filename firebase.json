{
    "$schema": "https://raw.githubusercontent.com/firebase/firebase-tools/master/schema/firebase-config.json",
    "hosting": {
        "public": "app/dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            // Prevent root level pages from being passed to ogimage function
            {
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "/official",
                "destination": "/index.html"
            },
            // Fundraisers are only at root level; give them dynamic og:image
            {
                "source": "/*",
                "function": {
                    "functionId": "replace_ogimage",
                    "pinTag": true,
                    "region": "us-west1"
                }
            },
            // Any nested pages are not fundraisers and don't need dynamic og:image
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": [
        {
            "runtime": "nodejs20",
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ]
        }
    ],
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    }
}
